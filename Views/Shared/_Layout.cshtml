<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header class="bg-secondary text-center text-white p-3 mb-2">
            <h1>My Trip Log</h1>
        </header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Trip" asp-action="Add" asp-route-id="page1">Add Trip</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Accommodation" asp-action="Index">Manage Accommodations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Destination" asp-action="Index">Manage Destinations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activity" asp-action="Index">Manage Activities</a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main">
            @* display temporary message if there is one *@
            @if (TempData.Keys.Contains("message"))
            {
                <h2 class="bg-light text-center p-2 mb-1">@TempData["message"]</h2>
            }

            @* display sub header if there is one *@
            @if (ViewData.Keys.Contains("SubHeader"))
            {
                <h2 class="mt-2 mb-2">@ViewBag.SubHeader</h2>
            }

            @RenderBody()
        </main>
    </div>

</body>
</html>
